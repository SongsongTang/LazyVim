{
    "QG_TEMPLATE": {
        "prefix": "qg",
        "body": [
            "/* ********************************  function  ******************************** */",
            "$1",
            "/* ********************************  parameter ******************************** */",
            "$2",
            "/* ********************************    port    ******************************** */",
            "$3",
            "/* ********************************   mechine  ******************************** */",
            "$4",
            "/* ********************************    reg     ******************************** */",
            "$5",
            "/* ********************************    wire    ******************************** */",
            "$6",
            "/* ********************************  component ******************************** */",
            "$7",
            "/* ********************************   assign   ******************************** */",
            "$8",
            "/* ********************************   always   ******************************** */",
            "$9",
            "$0"
        ],
        "description": "Qi Ge TEMPLATE"
    },
    "Template": {
        "prefix": "temp",
        "body": [
            "/* ============================================================================ */",
            "/* ************************* Begin of ${1:Main Code}       ************************* */",
            "/* ---------------------------------------------------------------------------- */",
            "$2",
            "/* ---------------------------------------------------------------------------- */",
            "/* ************************* End of ${1:Main Code}         ************************* */",
            "/* ============================================================================ */",
            "$0"
        ]
    },
    "Subtemplate": {
        "prefix": "subtem",
        "body": [
            "/* ************************* Begin of ${1:wire} ************************* */",
            "$0",
            "/* ************************* End of ${1:wire}   ************************* */"
        ]
    },
    "always": {
        "prefix": "alw",
        "body": [
            "always @(posedge i_clk, posedge i_rst)",
            "begin",
            "    $1",
            "end$0"
        ],
        "description": "always"
    },
    "alwaysif": {
        "prefix": "alif",
        "body": [
            "always @(posedge ${1:i_clk}, ${2:posedge} ${3:i_rst})",
            "begin",
            "    if (${3:i_rst})",
            "    begin",
            "        $4",
            "    end",
            "    else",
            "    begin",
            "        $5",
            "    end",
            "end$0"
        ],
        "description": "always if 2"
    },
    "alwaysif3": {
