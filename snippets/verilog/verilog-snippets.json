    "assignif": {
        "prefix": "asif",
        "body": [
            "assign ${1:w_wire} = (${2:l_value} > ${3:r_value}) ? ${4:1'b1} : ${5:1'b0};$0"
        ]
    },
    "ifoneline": {
        "prefix": "ifol",
        "body": [
            "(${1:condition}) ? ${2:valTrue} : ${3:valFalse};$0"
        ]
    },
    "if2oneline": {
        "prefix": "if2ol",
        "body": [
            "(${1:condition}) ?",
            "(${2:condition}) ? ${3:val12True} : ${4:val1True}",
            "                                  : ${5:val1False};$0"
        ]
    },
    "ifelse": {
        "prefix": "ifelse",
        "body": [
            "if (${1:condition})",
            "begin",
            "    $2",
            "end",
            "else",
            "begin",
            "    $3",
            "end"
